<?xml version="1.0"?>
<project name="SpellChecker" default="compile">
	<property name="output.name" value="Tests" />
	<target name="compile" description="Compile project">
		<copy todir="${build.dir}\bin">
			<fileset basedir="C:\Program Files\NUnit V2.0\bin">
					<includes name="nunit.framework.dll" />
			</fileset>
		</copy>
		<copy todir="${data.dir}">
					<fileset basedir="Data">
							<includes name="*.txt" />
					</fileset>
		</copy>
		<csc target="library" warnaserror="false" debug="${build.debug}" output="${build.dir}\bin\${project.name}.${output.name}.dll" doc="">       
			<sources>
				<includes name="**\*.cs" />
			</sources>
			<references>
				<includes name="System.dll"/>
				<includes name="System.Data.dll"/>
				<includes name="System.Xml.dll"/>
				<includes name="System.Drawing.dll"/>
				<includes name="System.Windows.Forms.dll"/>
				<includes name="System.Design.dll"/>
				<includes name="${build.dir}\bin\NetSpell.SpellChecker.dll"/>
				<includes name="${build.dir}\bin\nunit.framework.dll"/>
			</references>
		</csc>
		
	</target>
</project>